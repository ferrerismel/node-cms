# Configuración de la aplicación
NODE_ENV=development
PORT=3000

# Variables de entorno para desarrollo (SQLite)
# No se necesitan variables específicas para SQLite en desarrollo

# Variables de entorno para producción (PostgreSQL)
# Descomenta y configura estas variables para producción
# DB_USER=tu_usuario_postgres
# DB_PASSWORD=tu_password_postgres
# DB_NAME=nombre_base_datos
# DB_HOST=tu_host_postgres
# DB_PORT=5432

# Configuración de JWT
JWT_SECRET=tu_jwt_secret_muy_seguro
JWT_EXPIRES_IN=24h

# Configuración de email (opcional)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=tu_email@gmail.com
# SMTP_PASS=tu_password_email

# Configuración de archivos
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=5242880